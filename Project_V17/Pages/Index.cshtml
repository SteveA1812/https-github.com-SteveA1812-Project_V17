@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div style="padding-left:250px">
<h3>Further Study Portal</h3>
<p> Please Register to begin an application or Sign In to continue/update a current application</p>


</div>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/College 3.jpg" alt="IT Sligo" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    More about IT Sligo
                    <a class="btn btn-default" href="https://itsligo.ie">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/College.jpg" alt="Further Study" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Information around the further study procedure can be found here.
                    <a class="btn btn-default" href="https://mailitsligo.sharepoint.com/:b:/s/HRDepartment/EdLwV5FGKNtCg5wx2vomSZkBi645Zprpgg8EGflLfMKTaQ?e=Or8jTt">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Sligo 1.jpg" alt="Online CLasses" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn what courses you can do here at IT Sligo.
                    <a class="btn btn-default" href="https://www.itsligo.ie/courses/open-and-distance/">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Sligo 2.jpg" alt="Other Training" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    LinkedIn Learning provides you training on demand
                    <a class="btn btn-default" href="" https://www.itsligo.ie/courses/open-and-distance/"">
                    Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


